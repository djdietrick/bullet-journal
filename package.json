    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.8.10",
    "mongoose-schema-extend": "^0.2.2",
    "validator": "^12.2.0",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vuex": "^3.4.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
